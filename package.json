{
  "name": "imgtourl",
  "version": "0.1.0",
  "description": "Lightweight client and CLI to upload images to Cloudflare R2 and return a permanent URL.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "imgtourl": "./dist/cli.js",
    "imagetourl": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "image",
    "upload",
    "cloudflare",
    "r2",
    "url",
    "image hosting"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.842.0",
    "imgtourl": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.50",
    "typescript": "^5.8.3"
  }
}
